{
    "name": "tapp/filament-forum",
    "description": "Forum and comments package for Filament apps.",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Tapp\\FilamentForum\\": "src/"
        }
    },
    "require": {
        "php": ">=8.2",
        "laravel/framework": ">=11.0",
        "livewire/livewire": ">=3.5",
        "kirschbaum-development/commentions": "^0.6",
        "filament/filament": "^4.0",
        "spatie/laravel-package-tools": "^1.0",
        "spatie/laravel-medialibrary": "^11.0",
        "filament/forms": "^4.0",
        "filament/tables": "^4.0",
        "filament/infolists": "^4.0",
        "filament/support": "^4.0"
    },
    "require-dev": {
        "laravel/pint": "^1.24",
        "nunomaduro/collision": "^8.0",
        "orchestra/testbench": "^9.14",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2",
        "phpstan/phpstan": "^2.1",
        "spatie/laravel-ray": "^1.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tapp\\FilamentForum\\FilamentForumServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
